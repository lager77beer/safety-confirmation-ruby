<div class="text-center">
  <h1>災害一覧</h1>
</div>

<div class="row disaster_index_block mt-4">
  <div class="col-sm-12 offset-sm-0">
    <table  id="disaster-table" class="table table-striped table-sm  table-borderless">
      <thead class="table-primary">
        <tr>
          <th>安否一覧[ID]</th>
          <th>災害</th>
          <th>日付</th>
          <th>メンテ</th>
        </tr>
      </thead>
      <tbody>
      <% @disasters.each do |disaster| %>
        <tr>
          <td><%= link_to "安否一覧[#{disaster.id}]", disaster_safeties_path(disaster_id: disaster.id) %></td>
          <td><%= disaster.name %></td>
          <td><%= disaster.created_at.to_s(:datetime) %></td>
          <td><%= link_to "メンテ", edit_disaster_path(disaster.id), class: "badge badge-warning" %></td>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>
</div>

<%= form_with(url: new_disaster_path, method: :get, local: true) do |f| %>
<div class="row disaster_create_block">

  <div class="col-sm-2 offset-sm-2 p-1">
    <div class="form-group text-align-r mt-1">
      <%= f.label :name, '災害名称', class: 'lbl-name' %>
    </div>
  </div>
  <div class="col-sm-4 p-1">
    <div class="form-group text-align-l">
      <%= f.text_field :name, class: 'form-control txt-name' %>
    </div>
  </div>
  <div class="col-sm-4 p-1">
    <div class="form-group text-align-l">
      <%= f.submit '新規登録＆メール送信', {class: 'btn btn-primary',id: 'btn-create'} %>
    </div>
  </div>
</div>
<% end %>
